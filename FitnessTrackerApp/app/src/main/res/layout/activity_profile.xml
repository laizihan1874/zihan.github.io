<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".auth.ui.ProfileActivity">

    <TextView
        android:id="@+id/textViewProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewUserLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level: N/A"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/textViewUserXP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XP: N/A"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <ProgressBar
        android:id="@+id/progressBarXP"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:max="100"
        android:progress="0" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonViewAchievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Achievements"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonFitnessAssessment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Fitness Assessment"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonMyGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Fitness Assessment"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonLeaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Leaderboard"/>

</LinearLayout>
