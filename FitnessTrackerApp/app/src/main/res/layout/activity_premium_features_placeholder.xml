<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".premium.ui.PremiumFeaturesPlaceholderActivity">

    <TextView
        android:id="@+id/textViewPremiumPlaceholderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🏆 Premium Features Coming Soon!"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/textViewPremiumPlaceholderMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPremiumPlaceholderTitle"
        android:text="Unlock advanced analytics, personalized coaching, exclusive content, and much more with FitnessTrackerApp Premium. Stay tuned for exciting updates!"
        android:textAppearance="?attr/textAppearanceBody1"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/buttonPremiumPlaceholderOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK, Got It!"
        android:layout_below="@id/textViewPremiumPlaceholderMessage"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
